
 
<main class="container">

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>
     {{!-- <button id="show-form" type="submit" class="btn btn-primary">New Post +</button> --}}

    <form id="new_post" class="form new-post-form grid gap-3">
     
      <div class="form-group p-2 g-col-12">
        <label for="post-name">Title:</label>
        <input class="form-input rounded" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group p-2 g-col-12">
        <label for="post-desc">description:</label>
        <textarea class="form-input rounded" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group p-2 g-col-12">
        <button id="addPost" type="submit" class="btn btn-primary">New Post +</button>
      </div>
    </form>
  </div>

  {{#if items.length}}
  <div class="col-md-6 blog-list">
    {{#each items as |item|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h3 class="title_blog">{{item.title}}</h3>
        <p class="desc_blog display_none">{{item.description}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger delete-btn" data-id = "{{item.id}}">DELETE</button>
        <button class="btn btn-sm btn-danger edit-btn" data-id ="{{item.id}}">Edit</button>
      </div>


      
        <form class="display_edit form edit-post-form grid gap-3">
        
          <div class="form-group p-2 g-col-12">
            <label for="edit-name">Title:</label>
            <input class="form-input rounded" type="text" class="edit-title" id="edit-name_{{item.id}}" name="edit-name"/>
          </div>
          <div class="form-group p-2 g-col-12">
            <label for="post-desc">description:</label>
            <textarea class="form-input rounded" class="edit-description" id="edit-desc_{{item.id}}" name="edit-desc"></textarea>
          </div>
          <div class="form-group p-2 g-col-12">
            <button id="editPost" type="submit" class="edited-post btn btn-primary" data-id = "{{item.id}}">Edit</button>
          </div>
        </form>
  
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

 

</main>
<script src="/js/dashboard.js"></script>
<script src="/js/editPost.js"></script>

